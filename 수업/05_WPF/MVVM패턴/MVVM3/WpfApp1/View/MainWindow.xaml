<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="도서관리프로그램" Height="350" Width="600">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <StackPanel Margin="10">
         
        <Button Content="도서 추가" Command="{Binding AddCommand}" Width="100"/>
        <Button Content="도서 삭제" Command="{Binding DeleteCommand}" Width="100" Margin="5"/>
        <Button Content="저장" Command="{Binding SaveCommand}" Margin="5"/>
        <Button Content="불러오기" Command="{Binding LoadCommand}" Margin="5"/>
        
        <DataGrid ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="제목" Binding="{Binding Title}" />
                <DataGridTextColumn Header="저자" Binding="{Binding Author}" />
                <DataGridTextColumn Header="출판일" Binding="{Binding PublishedDate}" />
            </DataGrid.Columns>
        </DataGrid>
        
    </StackPanel>
</Window>
