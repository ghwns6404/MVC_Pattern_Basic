<Window x:Class="_0429_바인딩사용실습.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0429_바인딩사용실습"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    <!--<Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>-->
    
    
    <Window.Resources>
        <local:Books x:Key="books"/>
        <local:StockToStringConverter x:Key="stockStringConverter"/>
        <local:MainViewModel x:Key="mainviewmodel"/>
    </Window.Resources>
    <StackPanel DataContext="{StaticResource books}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="insert" Grid.Column="0" Margin="3" Height="30" Content="저장" Click="insert_Click" />
            <Button Name="update" Grid.Column="1" Margin="3" Height="30" Content="수정" Click="update_Click" />
            <Button Name="delete" Grid.Column="2" Margin="3" Height="30" Content="삭제" Click="delete_Click" />
            <Button Name="sort" Grid.Column="3" Margin="3" Height="30" Content="정렬" Click="sort_Click" />
        </Grid>
        
        <TextBox Grid.Row="2" Width="500" Height="30" Margin="0 0 0 10" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

        <DataGrid x:Name="datagrid" Grid.Row="1" ItemsSource="{Binding books}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedMember}" Margin="0 10 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title"     Binding="{Binding Title}"     />
                <DataGridTextColumn Header="Price"     Binding="{Binding Price}"     />
                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" />
                <DataGridTextColumn Header="Image"     Binding="{Binding Image}"     />
                <DataGridTextColumn Header="Stock"     Binding="{Binding Stock}"     />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
