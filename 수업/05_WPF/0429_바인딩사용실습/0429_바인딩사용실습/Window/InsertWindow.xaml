<Window x:Class="_0429_바인딩사용실습.InsertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0429_바인딩사용실습"
        mc:Ignorable="d"
        Title="InsertWindow" Height="450" Width="800">
    <Window.Resources>
        <local:Book x:Key="book"/>
        <local:StockConverter x:Key="stockConverter"/>
    </Window.Resources>

    <StackPanel Background="White" Width="400" DataContext="{StaticResource book}">
        <!-- 첫번째 라인 (이름) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label Width="65" HorizontalAlignment ="Center">이름(_N):</Label>
                <TextBox Name="title" Background="red" Text="{Binding Path=Title}" Width="160"/>
            </StackPanel>
        </Grid>
        <!-- 두번째 라인 (가격) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5,5,5,5" Orientation="Horizontal" Grid.ColumnSpan="2">
                <Label Width="65" HorizontalAlignment ="Center">가격(_P):</Label>
                <TextBox Name="price" Background="Orange" Text="{Binding Path=Price}" Width="160"/>
            </StackPanel>
        </Grid>
        <!-- 세번째 라인(출판사) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label Width="65" HorizontalAlignment ="Center">출판사(_C):</Label>
                <TextBox Name="publisher" Background="Yellow" Text="{Binding Path=Publisher}" Width="160"/>
            </StackPanel>
        </Grid>
        <!-- 네번째 라인 (이미지) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label Width="65" HorizontalAlignment ="Center">이미지(_I):</Label>
                <TextBox Name="image_file" Background="Green" Text="{Binding Path=Image}" Width="160"/>
            </StackPanel>
        </Grid>
        <!-- 다섯번째 라인(재고) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label Width="65" HorizontalAlignment ="Center">재고(_S):</Label>
                <StackPanel Grid.Column="3" Orientation="Horizontal" Background="LightGreen">
                    <RadioButton IsChecked="{Binding Path=Stock}" Content="유" Margin="30,5,20,5"/>
                    <RadioButton IsChecked="{Binding Path=Stock , Converter={StaticResource stockConverter}}" Content="무" Margin="15,5,30,5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <StackPanel>
            <Button Margin="300,5,0,5" Width="100" Height="30" Content="저장" Click="addButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
