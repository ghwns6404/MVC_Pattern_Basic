<Window x:Class="_0428_오후실습.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0428_오후실습"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel >
        
        <Grid  Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label >이름(_N):</Label>
                <TextBox Name="name" Width="120" />
            </StackPanel>
            
            
            <StackPanel Grid.Column="1" Margin="5" Orientation="Horizontal">
                <Label >전화(_P):</Label>
                <TextBox Name="phone" Width="120" />
            </StackPanel>
            
            
            <StackPanel Grid.Column="2" Margin="5" Orientation="Horizontal">
                <Label >ID(_N):</Label>
                <TextBox Name="id" Width="120" />
            </StackPanel>
            
            
            <StackPanel Grid.Column="3" Margin="5" Orientation="Horizontal">
                <Label >PW(_N):</Label>
                <TextBox Name="pw" Width="120" />
            </StackPanel>
            
            
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label  Height="25" Name="nameLabel"/>
            </Border>
            <Border Grid.Column="1" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label Height="25" Name="phoneLabel"/>
            </Border>
            <Border Grid.Column="2" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label  Height="25" Name="idLabel"/>
            </Border>
            <Border Grid.Column="3" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label  Height="25" Name="pwLabel"/>
            </Border>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Name="addButton" Margin="3" Height="30" Grid.Column="0" Grid.Row="0" Content="추가" 
Click="addButton_Click" />
            <Button Name="removeButton" Margin="3" Height="30" Grid.Column="1" Grid.Row="0" Content="삭제" 
Click="removeButton_Click" />
            <Button Name="updateButton" Margin="3" Height="30" Grid.Column="2" Grid.Row="0" Content="변경" 
Click="updateButton_Click" />
            <Button Name="selectButton" Margin="3" Height="30" Grid.Column="3" Grid.Row="0" Content="출력" 
Click="selectButton_Click" />
            <Button Name="randomButton" Margin="3" Height="30" Grid.Column="0" Grid.Row="1" Content="랜덤박스" 
Click="randomButton_Click" />
            <Button Name="randomButto1" Margin="3" Height="30" Grid.Column="1" Grid.Row="1" Content="예비1" 
Click="randomButton_Click" />
            <Button Name="randomButton2" Margin="3" Height="30" Grid.Column="2" Grid.Row="1" Content="예비2" 
Click="randomButton_Click" />
            <Button Name="randomButton3" Margin="3" Height="30" Grid.Column="3" Grid.Row="1" Content="예비3" 
Click="randomButton_Click" />
        </Grid>

       



        <ListBox Name="listbox" SelectionChanged="listbox_SelectionChanged" />
    </StackPanel>

</Window>
