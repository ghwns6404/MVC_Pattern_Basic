<Window x:Class="_0428_WPF1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0428_WPF1"
        mc:Ignorable="d"
        Title="Window1" Height="454" Width="861">
    <Canvas x:Name="canvas" Background="AliceBlue" Margin="0,0,36,1" RenderTransformOrigin="0.5,0.5" MouseRightButtonDown="canvas_MouseRightButtonDown" MouseMove="canvas_MouseMove" MouseRightButtonUp="canvas_MouseRightButtonUp">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.058"/>
                <TranslateTransform/>
            </TransformGroup>
        </Canvas.RenderTransform>
        <StackPanel>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                    <Label >이름(_N):</Label>
                    <TextBox Name="name" Width="120" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5" Orientation="Horizontal">
                    <Label >전화(_P):</Label>
                    <TextBox Name="phone" Width="120" />
                </StackPanel>
            </Grid>
        </StackPanel>
        <Button Canvas.Left="10" Canvas.Bottom="10" Width="80" Height="25" Content="쓰레기버튼"/>
        <Ellipse Canvas.Right="10" Canvas.Top="120" Width="50" Height="25" Fill="GreenYellow" Canvas.Left="28" />

        <Rectangle x:Name="rect" Height="115" Canvas.Left="436" Stroke="Black" Canvas.Top="109" Width="130" Fill="Crimson"/>

        <Button x:Name="up_button"    Content="Up"    Click="Button_Click" Canvas.Left="212"  Canvas.Top="245" Height="54" Width="50"/>
        <Button x:Name="left_button"  Content="Left"  Click="Button_Click" Canvas.Left="145"  Canvas.Top="307" HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="53"/>
        <Button x:Name="right_button" Content="Right" Click="Button_Click" Canvas.Left="274" Canvas.Top="303" Height="30" Width="52"/>
        <Button x:Name="down_button"  Content="Down"  Click="Button_Click" Canvas.Left="205"  Canvas.Top="307" Height="36" Width="63"/>
        <Button Content="별 되돌리기" Canvas.Left="15" Canvas.Top="254" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="전부초기화" Canvas.Left="16" Canvas.Top="187" Height="53" Width="69" Click="Button_Click_2"/>
        <Button Content="대멸종" Canvas.Left="385" Canvas.Top="19" Height="39" Width="174" Click="Button_Click_3"/>
    </Canvas>
</Window>
