<Window x:Class="WPF_관리프로그램.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_관리프로그램" d:DataContext="{d:DesignInstance Type=local:MemberList}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:MemberList x:Key="MemberList"/>
        <local:Member x:Key="Member"/>
    </Window.Resources>
    <StackPanel Name ="panel" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- 첫줄 (데이터 입력부분)-->
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label >아이디(_I):</Label>
                <TextBox Name="Id" Width="120"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5" Orientation="Horizontal">
                <Label >이름(_N):</Label>
                <TextBox Name="Name"  Width="120"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="5" Orientation="Horizontal">
                <Label >나이(_A):</Label>
                <TextBox Name="Age"  Width="120"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="5" Orientation="Horizontal">
                <Label>전화번호(_P):</Label>
                <TextBox Name="Phone"  Width="120"/>
            </StackPanel>
        </Grid>
        <!-- 2번 줄 (검색할 데이터 / 검색버튼)-->
        <Grid DataContext="{StaticResource MemberList}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox Name="SelectData"  Margin="3" Height="30" Width="605"/>
                <Button Name="SelectButton" Margin="3" Height="30" Width="180" Content="검색" Click="SelectButton_Click"/>
            </StackPanel>
        </Grid>
        <!-- 3번 줄 (버튼들 (저장, 삭제, 수정))-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="InsertButton" Margin="3"  Grid.Column="0" Height="30" Width="220" Content="저장" Click="InsertButton_Click"/>
            <Button Name="DeleteButton" Margin="3"  Grid.Column="1" Height="30" Width="220" Content="삭제" Click="DeleteButton_Click"/>
            <Button Name="UpdateButton" Margin="3"  Grid.Column="2" Height="30" Width="220" Content="수정" Click="UpdateButton_Click"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox Name="listbox" Grid.Column="0" ItemsSource="{StaticResource MemberList}" IsSynchronizedWithCurrentItem="True" Height="104" Width="796" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock> 
                        <TextBlock Text="{Binding Path=Id}"/>
                        ,
                        <TextBlock Text="{Binding Path=Name}"/>
                        ,
                        <TextBlock Text="{Binding Path=Age}"/>
                        ,
                        <TextBlock Text="{Binding Path=Phone}"/>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel x:Name="stack1" DataContext="{StaticResource Member}" Grid.Column="1">
            <TextBox x:Name="id"     IsReadOnly="True"/>
            <TextBox x:Name="name"      IsReadOnly="True"/>
            <TextBox x:Name="age"     IsReadOnly="True"/>
            <TextBox x:Name="phone"   IsReadOnly="True" />
        </StackPanel>
        </Grid>


    </StackPanel>
</Window>
